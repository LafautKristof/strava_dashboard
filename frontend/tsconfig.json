{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "types": ["react", "react-dom"],
        "paths": {
            "@/*": ["./src/*"]
        },
        "typeRoots": ["./types", "./node_modules/@types", "./src/types"]
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "src/helpers/DrawMap",
        "next-env.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": ["node_modules"]
}
